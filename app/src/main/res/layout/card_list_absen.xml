<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xml_card_list_absen"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:id="@+id/rl1"
        >

        <ImageView
            android:layout_width="60dp"
            android:maxHeight="70dp"
            android:minHeight="70dp"
            android:maxWidth="70dp"
            android:minWidth="70dp"
            android:layout_height="60dp"
            android:src="@drawable/blank_justin"
            android:layout_centerVertical="true"
            android:id="@+id/ivAbsenPribadi"/>


        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/ivAbsenPribadi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="NAMA"
            android:textStyle="bold"
            android:textColor="#1f0303"
            android:id="@+id/tvNamaKaryawan"/>

        <TextView
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/ivAbsenPribadi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="ID 0123456789"
            android:textColor="#54295e"
            android:id="@+id/tvNikKaryawan"
            android:layout_below="@id/tvNamaKaryawan"/>

        <TextView
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/ivAbsenPribadi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="JABATAN"
            android:textColor="#15260e"
            android:layout_marginTop="5dp"
            android:id="@+id/tvJababatanKaryawan"
            android:layout_below="@id/tvNikKaryawan"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:id="@+id/llwaktu"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="White List"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#030302"
                android:id="@id/tvJamMasuk"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llwaktu"
            android:text="Rabu 02/02/2020"
            android:textColor="#1f0303"
            android:layout_centerHorizontal="true"
            android:id="@+id/tvTanggalAbsen"
            android:textSize="13dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTanggalAbsen"
            android:text="10 : 00"
            android:textColor="#1f0303"
            android:layout_centerHorizontal="true"
            android:id="@+id/tvJamMasuk"
            android:textSize="15dp"/>

    </RelativeLayout>

</RelativeLayout>